<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#756090"
    tools:context=".Persona_Edit"
    android:orientation="vertical"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar con SQLite"
                android:textColor="#353535"
                android:textSize="36dp"
                android:translationX="0dp"
                android:translationY="-250dp"/>

            <EditText
                android:id="@+id/id"
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:focusable="false"
                android:editable="false"
                android:ems="10"
                android:hint="ID"
                android:textColor="#353535"
                android:translationX="0dp"
                android:translationY="-175dp"/>

            <EditText
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:ems="10"
                android:id="@+id/et_nombre"
                android:hint="Nombre"
                android:textColor="#353535"
                android:translationX="0dp"
                android:translationY="-125dp"/>

            <EditText
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:ems="10"
                android:id="@+id/et_apellido"
                android:hint="Apellido"
                android:textColor="#353535"
                android:translationX="0dp"
                android:translationY="-75dp"/>

            <EditText
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:id="@+id/et_edad"
                android:hint="Edad"
                android:textColor="#353535"
                android:translationX="0dp"
                android:translationY="-20dp"/>

            <Button
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:id="@+id/btn_editar"
                android:text="Editar Persona"
                android:background="#757575"
                android:translationY="85dp"/>

            <Button
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:id="@+id/btn_eliminar"
                android:text="Borrar Persona"
                android:background="#655080"
                android:translationY="175dp"/>

            <Button
                android:id="@+id/btn_volver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volver"
                android:layout_weight="1"
                android:translationX="40dp"
                android:translationY="-310dp"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>